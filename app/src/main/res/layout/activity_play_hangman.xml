<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dk.hardcorefight.hangman.PlayHangman">

    <Button
        android:id="@+id/SubmitGuessButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SubmitGuess"
        app:layout_constraintLeft_toRightOf="@+id/GuessTextEdit"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.703"
        app:layout_constraintTop_toTopOf="@+id/GuessTextEdit"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
    />

    <EditText
        android:id="@+id/GuessTextEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/InitialGuess"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GuessedWordView"
        app:layout_constraintRight_toLeftOf="@+id/SubmitGuessButton"
        app:layout_constraintBottom_toBottomOf="parent"
    />

    <TextView
        android:id="@+id/GuessedWordView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/InitialGuessedWord"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/HangmanStatusImage"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
    />

    <ImageView
        android:id="@+id/HangmanStatusImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gallow_0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
    />

    <TextView
        android:id="@+id/GameStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/GameInProgressStatus"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/GuessedWordView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
